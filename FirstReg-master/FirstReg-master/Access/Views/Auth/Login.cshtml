@model LoginModel

@{
    Layout = "_AccLayout";
    ViewData["Title"] = "Login";
}

<div class="d-lg-none text-center p-5 pt-10">
    <a href="~/" class="mb-15"> <img alt="Logo" src="~/img/logos/logo.png" class="h-80px" /> </a>
</div>

<div class="d-flex flex-column flex-lg-row flex-column-fluid">
    <div class="d-none d-lg-flex flex-column flex-lg-row-fluid">
        <div class="d-flex flex-row-fluid flex-center p-10">
            <div class="d-flex flex-column">
                <a href="~/" class="mb-15"> <img alt="Logo" src="~/img/logos/logo.png" class="h-80px" /> </a>
                <h1 class="text-dark fs-2x mb-3">Welcome!</h1>
                <div class="fw-bold fs-4 text-gray-800 mb-10">
                    Enter your email and password to access your account.
                </div>
            </div>
        </div>
        <div class="d-flex flex-row-auto bgi-no-repeat bgi-position-x-center bgi-size-contain bgi-position-y-bottom min-h-200px min-h-xl-300px mb-xl-10" style="background-image: url(assets/media/illustrations/networks.png)"></div>
    </div>
    <div class="flex-row-fluid d-flex flex-center justfiy-content-xl-first p-10">
        <div class="d-flex flex-center p-15 shadow rounded w-100 w-md-550px mx-auto ms-xl-20">
            <form class="form form-loader" id="form_login" asp-action="Login">
                <div class="text-center mb-10">
                    <h1 class="text-dark mb-3">Login to Online Access</h1>
                    <div class="text-gray-400 fw-bold fs-4">
                        Don't have an account yet? <a asp-action="Register" class="link-primary fw-bolder">Create an Account</a>.
                    </div>
                </div>
                <div class="fv-row mb-10">
                    <label class="form-label fw-bolder text-dark fs-6">Email</label>
                    <input class="form-control form-control-lg form-control-solid py-6 px-6 rounded-lg" type="email" placeholder="user@email.com" asp-for="Username" autocomplete="off" required />
                </div>
                <div class="fv-row mb-10">
                    <div class="d-flex flex-stack mb-2">
                        <label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
                        <a asp-action="Forgot" class="link-primary fs-6 fw-bolder">Forgot Password ?</a>
                    </div>
                    <input class="form-control form-control-lg form-control-solid py-6 px-6 rounded-lg" type="password" placeholder="••••••••" asp-for="Password" autocomplete="off" required />
                </div>
                <div class="fv-row mb-10">
                    <label class="form-check form-check-custom form-check-solid form-check-inline mb-5"> <input class="form-check-input" type="checkbox" name="toc" value="1" /> <span class="form-check-label fw-bold text-gray-700">Remember me.</span> </label>
                </div>
                <div class="text-center pb-lg-0 pb-8">
                    <button type="submit" id="form_login_submit" class="btn btn-lg btn-primary bt-submit fw-bolder"> <span class="indicator-label">Sign in to your Account</span> <span class="indicator-progress">Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span> </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/custom/authentication/sign-up/free-trial.js" asp-append-version="true"></script>
}