@model ResetModel

@{
    ViewData["Title"] = "Password Changed";
}

<div class="pt-lg-10">
    <div class="row justify-content-center text-center">
        <div class="col-sm-10 col-md-6">
            <img class="img-fluid mw-200px" src="~/img/illustrations/password-done.png" />
            <h1 class="fw-bolder fs-2qx text-gray-800 mb-7">Password Changed</h1>
            <div class="fw-bold fs-3 text-gray-800 mb-15">
                Your password was successfully changed. Please Sign in to start
                using your account again.
            </div>
            <div class="text-center">
                <a href="~/login" class="btn btn-lg btn-primary fw-bolder">Login to your account</a>
            </div>
        </div>
    </div>
</div>