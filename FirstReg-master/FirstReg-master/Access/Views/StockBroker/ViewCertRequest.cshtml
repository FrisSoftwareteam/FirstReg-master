                            </div>
                            <div class="menu-item px-5 my-1">
                                <a href="javascript:;" class="menu-link px-5" data-bs-toggle="modal" data-bs-target="#new_cert_modal">Edit Request</a>
                            </div>
                            <div class="menu-item px-5">
                                <a href="javascript:;" class="menu-link text-danger px-5">Delete Request</a>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

@if (Model.ECertHolders.Count > 0)
{
    foreach (var item in Model.ECertHolders)
    {

        <div class="mb-12 card card-docs">
            <div class="card-body fs-6 px-5 py-7 text-gray-800">
                <div class="pb-md-5 pt-md-10 px-md-10">
                    <div class="g-0 row">
                        <div class="mb-10 col-md-4">
                            <div class="rounded-3 bg-opacity-50 h-md-100 mx-md-5 p-5 pe-10">
                                <div>
                                    <img src="@Tools.GetBlobFilePath(blobfolder.certs, item.PhotoFileName)" class="rounded w-200px mb-5" />
                                    <h1 class="fw-bolder mb-2">
                                        @item.FullName
                                    </h1>
                                </div>
                                <div>
                                    <img src="@item.Signature" class="h-100px" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">

                            <div class="card-header px-0">
                                <h3 class="card-title align-items-start flex-column">
                                    <span class="card-label fw-bolder text-dark">Certificates</span>
                                    <span class="text-gray-400 mt-1 fw-bold fs-6">@item.ECertHoldings.Count certificates uploaded for @item.FullName</span>
                                </h3>
                                <div class="card-toolbar">
                                    @*<a href="@Tools.GetBlobFilePath(blobfolder.certs, item.PhotoFileName)" data-fslightbox="lightbox-basic"
                                        class="btn btn-sm btn-light-primary fw-bolder">View Shareholder ID</a>*@
                                    <a href="@Tools.GetBlobFilePath(blobfolder.certs, item.IdFileName)" data-fslightbox="lightbox-basic"
                                       class="btn btn-sm btn-light-primary fw-bolder">View Shareholder ID</a>
                                </div>
                            </div>

                            @foreach (var itm in item.ECertHoldings)
                            {

                                <div class="card bg-light mb-5">

                                    <div class="card-body p-5">
                                        <div class="d-flex align-items-sm-center">
                                            <div class="me-4 symbol symbol-2by3 symbol-60px">
                                                <div class="symbol symbol-60px">
                                                    <img src="~/assets/media/svg/files/pdf.svg" alt="">
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center flex-row-fluid flex-wrap me-2 my-lg-0">
                                                <div class="my-2 flex-grow-1 me-2 my-lg-0">
                                                    <a class="fw-bolder text-dark fs-3 text-hover-primary" href="#">
                                                        @itm.Units units of @itm.Register.Name
                                                    </a>
                                                    <span class="text-muted fw-bold d-block">
                                                        @itm.AccountNo / @itm.ClearingNo / @itm.CertificateNo
                                                    </span>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <div class=me-6>
                                                        <i class="fa fa-star-half-alt fs-5 me-1 text-warning">
                                                        </i>
                                                        <span class="fw-bolder text-gray-800">
                                                            4.2
                                                        </span>
                                                    </div>
                                                    <a class="border-0 btn btn-icon btn-light btn-sm" target="_blank" href="javascript:;">
                                                        <span class="svg-icon svg-icon-2 svg-icon-primary">
                                                            <svg height=24 viewBox="0 0 24 24" width=24 xmlns=http://www.w3.org/2000/svg fill=none>
                                                                <rect fill=black height=2 rx=1 width=13 x=18 y=13 opacity=0.5 transform="rotate(-180 18 13)">
                                                                </rect>
                                                                <path d="M15.4343 12.5657L11.25 16.75C10.8358 17.1642 10.8358 17.8358 11.25 18.25C11.6642 18.6642 12.3358 18.6642 12.75 18.25L18.2929 12.7071C18.6834 12.3166 18.6834 11.6834 18.2929 11.2929L12.75 5.75C12.3358 5.33579 11.6642 5.33579 11.25 5.75C10.8358 6.16421 10.8358 6.83579 11.25 7.25L15.4343 11.4343C15.7467 11.7467 15.7467 12.2533 15.4343 12.5657Z" fill=black>
                                                                </path>
                                                            </svg>
                                                        </span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
}

<div class="card flex-center bg-light-primary border-primary border border-dashed p-8">
    <img src="assets/media/svg/files/upload.svg" class="mb-5" alt="" />
    <a href="javascript:;" class="text-hover-primary fs-5 fw-bolder mb-2" data-mode="full-modal" data-target="dv_holder_diag">Upload New File</a>
    <div class="fs-7 fw-bold text-gray-400">Add a new shareholder</div>
</div>

<div id="dv_holder_diag" class="full-modal">
    <div class="full-modal-close" data-dismiss="full-modal"></div>
    <div class="container">
        <div class="scroll h-100 px-5">

            <form id="frm_holders" class="form form-loader" asp-action="AddCertRequestHolder" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <input type="hidden" name="@nameof(ECertHolder.RequestId)" value="@Model.Id" />
                    <div class="row justify-content-center py-5">
                        <div class="col-lg-9 col-md-10">
                            <h1 class="display-5 mb-15">Add New shareholder</h1>
                            <h3 class="pb-5 mt-0 mb-9 border-bottom">Basic Information</h3>
                            <div class="form-group row mb-8">
                                <div class="col-lg-6 mb-8">
                                    <label class="fs-6 fw-bold mb-2" for="FullName">Fullname:</label>
                                    <input name="@nameof(ECertHolder.FullName)" type="text" class="form-control form-control-solid h-auto py-4 px-7" placeholder="Enter full name" maxlength="100" required />
                                </div>
                                <div class="col-lg-6 mb-8">
                                    <label class="fs-6 fw-bold mb-2" for="Email">Select Photo:</label>
                                    <input type="file" class="form-control form-control-solid" placeholder="Select a file" name="photofile" required />
                                </div>
                                <div class="col-lg-6 mb-8">
                                    <label class="fs-6 fw-bold mb-2" for="Email">Select ID File:</label>
                                    <input type="file" class="form-control form-control-solid" placeholder="Select a file" name="idfile" required />
                                </div>
                                <div class="col-lg-6 mb-8">
                                    <label class="fs-6 fw-bold mb-2" for="MobileNo">Select Signature:</label>
                                    <input type="file" class="form-control form-control-solid" placeholder="Select a file" name="signfile" required />
                                </div>
                            </div>

                            <h3 class="pb-5 mt-0 mb-9 border-bottom">Certificates</h3>
                            <div>
                                <div id="rpt_holdings">
                                    <div class="form-group">
                                        <div data-repeater-list="rpt_holdings">
                                            <div data-repeater-item>
                                                <div class="form-group row mb-0">
                                                    <div class="col-md-10">
                                                        <div class="form-group row mb-0">
                                                            <div class="col-md-8 mb-5">
                                                                <label class="form-label">Security:</label>
                                                                <select name="@nameof(ECertHolding.RegisterId)" class="form-select form-control-solid h-auto px-7" aria-label="Select security" required>
                                                                    <option></option>
                                                                    @foreach (var reg in regs)
                                                                    {
                                                                        <option value="@reg.Id">@reg.Name</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                            <div class="col-md-4 mb-5">
                                                                <label class="form-label">Units:</label>
                                                                <input type="number" name="@nameof(ECertHolding.Units)" class="form-control form-control-solid h-auto px-7" placeholder="Enter units" maxlength="50" />
                                                            </div>
                                                            <div class="col-md-4 mb-5">
                                                                <label class="form-label">Account No:</label>
                                                                <input type="text" name="@nameof(ECertHolding.AccountNo)" class="form-control form-control-solid h-auto px-7" placeholder="Enter account no" maxlength="50" />
                                                            </div>
                                                            <div class="col-md-4 mb-5">
                                                                <label class="form-label">Clearing No:</label>
                                                                <input type="text" name="@nameof(ECertHolding.ClearingNo)" class="form-control form-control-solid h-auto px-7" placeholder="Enter chn no" maxlength="50" />
                                                            </div>
                                                            <div class="col-md-4 mb-5">
                                                                <label class="form-label">Certificate No:</label>
                                                                <input type="text" name="@nameof(ECertHolding.CertificateNo)" class="form-control form-control-solid h-auto px-7" placeholder="Enter cert no" maxlength="50" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <a href="javascript:;" data-repeater-delete class="btn btn-light-danger mt-3 mt-md-8">
                                                            <i class="la la-trash-o"></i>Delete
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="separator my-5"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mt-5">
                                        <a href="javascript:;" data-repeater-create class="btn btn-light-primary">
                                            <i class="la la-plus"></i>Add
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="separator my-10"></div>

                            <div class="mt-10">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary me-2 bt-submit">
                                            <span class="indicator-label">Submit</span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                        <a href="javascript:;" data-dismiss="full-modal" class="btn btn-secondary">Cancel</a>
                                    </div>
                                    <div class="col-lg-6 text-lg-end">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

