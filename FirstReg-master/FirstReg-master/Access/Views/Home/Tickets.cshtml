@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Registers";
    var count = Model.Count(x => !x.Resolved);
}

<div class="container">
    <div class="d-flex flex-wrap flex-stack">
        <div class="d-flex flex-column flex-wrap align-items-start my-1">
            <h1 class="page-header-title">Support Tickets</h1>
            <div>There @(count > 1 ? "are" : "is") (@count) open ticket@(count > 1 ? "s" : "")</div>
        </div>
        <div class="d-flex flex-wrap my-1">
            <div class="d-flex my-0">
                <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#new_ticket_diag" class="btn btn-primary fw-bolder fs-8 fs-lg-base">+ Create Ticket</a>
                <div class="d-flex align-items-center position-relative my-0 ms-5">
                    <span class="svg-icon svg-icon-3 position-absolute ms-3">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                            </g>
                        </svg>
                    </span>
                    <input type="search" id="tb_holdings_search" class="form-control form-control-white w-250px ps-9" placeholder="Search" />
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <table id="tb_holdings" class="table-row-bordered table-row-dashed gy-4 align-middle fw-bolder data-list">
            <thead class="fs-7 text-gray-400 text-uppercase d-none">
                <tr>
                    <th class="min-w-250px">Description</th>
                    <th class="min-w-50px text-end"></th>
                </tr>
            </thead>
            <tbody class="fs-6">
                @foreach (var item in Model.OrderByDescending(x => x.Date))
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center me-2">

                                @if (item.Resolved)
                                {
                                    <span class="svg-icon svg-icon-3tx svg-icon-secondary me-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <path d="M4.875,20.75 C4.63541667,20.75 4.39583333,20.6541667 4.20416667,20.4625 L2.2875,18.5458333 C1.90416667,18.1625 1.90416667,17.5875 2.2875,17.2041667 C2.67083333,16.8208333 3.29375,16.8208333 3.62916667,17.2041667 L4.875,18.45 L8.0375,15.2875 C8.42083333,14.9041667 8.99583333,14.9041667 9.37916667,15.2875 C9.7625,15.6708333 9.7625,16.2458333 9.37916667,16.6291667 L5.54583333,20.4625 C5.35416667,20.6541667 5.11458333,20.75 4.875,20.75 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                            <path d="M12.9835977,18 C12.7263047,14.0909841 9.47412135,11 5.5,11 C4.98630124,11 4.48466491,11.0516454 4,11.1500272 L4,7 C4,5.8954305 4.8954305,5 6,5 L20,5 C21.1045695,5 22,5.8954305 22,7 L22,16 C22,17.1045695 21.1045695,18 20,18 L12.9835977,18 Z M19.1444251,6.83964668 L13,10.1481833 L6.85557487,6.83964668 C6.4908718,6.6432681 6.03602525,6.77972206 5.83964668,7.14442513 C5.6432681,7.5091282 5.77972206,7.96397475 6.14442513,8.16035332 L12.6444251,11.6603533 C12.8664074,11.7798822 13.1335926,11.7798822 13.3555749,11.6603533 L19.8555749,8.16035332 C20.2202779,7.96397475 20.3567319,7.5091282 20.1603533,7.14442513 C19.9639747,6.77972206 19.5091282,6.6432681 19.1444251,6.83964668 Z" fill="#000000" />
                                        </svg>
                                    </span>
                                }
                                else
                                {
                                    <span class="svg-icon svg-icon-3tx svg-icon-primary me-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <path d="M6,2 L18,2 C18.5522847,2 19,2.44771525 19,3 L19,12 C19,12.5522847 18.5522847,13 18,13 L6,13 C5.44771525,13 5,12.5522847 5,12 L5,3 C5,2.44771525 5.44771525,2 6,2 Z M7.5,5 C7.22385763,5 7,5.22385763 7,5.5 C7,5.77614237 7.22385763,6 7.5,6 L13.5,6 C13.7761424,6 14,5.77614237 14,5.5 C14,5.22385763 13.7761424,5 13.5,5 L7.5,5 Z M7.5,7 C7.22385763,7 7,7.22385763 7,7.5 C7,7.77614237 7.22385763,8 7.5,8 L10.5,8 C10.7761424,8 11,7.77614237 11,7.5 C11,7.22385763 10.7761424,7 10.5,7 L7.5,7 Z" fill="#000000" opacity="0.3" />
                                            <path d="M3.79274528,6.57253826 L12,12.5 L20.2072547,6.57253826 C20.4311176,6.4108595 20.7436609,6.46126971 20.9053396,6.68513259 C20.9668779,6.77033951 21,6.87277228 21,6.97787787 L21,17 C21,18.1045695 20.1045695,19 19,19 L5,19 C3.8954305,19 3,18.1045695 3,17 L3,6.97787787 C3,6.70173549 3.22385763,6.47787787 3.5,6.47787787 C3.60510559,6.47787787 3.70753836,6.51099993 3.79274528,6.57253826 Z" fill="#000000" />
                                        </svg>
                                    </span>
                                }

                                <div>
                                    <div class="d-flex flex-column justify-content-center">
                                        <a asp-action="Ticket" asp-route-code="@item.Code"
                                           class="mb-1 text-info text-hover-primary h3">Support Ticket #@item.Code</a>
                                        <div class="fw-bold fs-6 text-primary">@item.Subject</div>
                                    </div>
                                </div>

                            </div>

                        </td>
                        <td class="text-end">
                            <a asp-action="Ticket" asp-route-code="@item.Code" class="btn btn-sm btn-primary btn-active-dark">
                                <span>Details</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="~/pages/registers.js" asp-append-version="true"></script>
}

<partial name="_NewTicket" />