@{
    ViewData["Title"] = "Share Offer Error";
}

<div class="pt-lg-10 mt-lg-10">
    <div class="row justify-content-center text-center">
        <div class="col-sm-10 col-md-6">
            <img class="img-fluid mw-150px mb-10" src="~/img/illustrations/error.png" />
            <h1 class="fw-bolder fs-2qx text-gray-800 mb-7">Something went wrong!</h1>
            <div class="fw-bold fs-3 text-gray-800 mb-15">
                @ViewData["error"].
            </div>
            <div class="text-center">
                <a asp-action="Index" class="btn btn-lg btn-secondary fw-bolder">Offers</a>
            </div>
        </div>
    </div>
</div>