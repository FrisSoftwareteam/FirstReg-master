@model SignatureModel

<div class="card mb-5 mb-xl-10">
    <div class="card-header">
        <div class="card-title">
            <h3>Update Signature</h3>
        </div>
        <div class="card-toolbar">
            <a href="javascript:;" class="btn btn-secondary er fs-7 px-8 ms-2" data-bs-toggle="modal" data-bs-target="#upload_signature_modal">Upload Signature</a>
            <a href="javascript:;" class="btn btn-secondary er fs-7 px-8 ms-2" data-bs-toggle="modal" data-bs-target="#update_signature_modal">Update Signature</a>
        </div>
    </div>

    <div class="card-body py-10">
        <div class="row justify-content-center py-5">
            <div class="col-lg-9 col-md-10">
                <div class="form-group row">
                    <div class="col-lg-12">
                        <label class="fs-6 fw-bold mb-2">Signature:</label>
                        <div class="p-0">
                            <img src="@Model.Signature" class="profile-sign" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_UploadSignatureModal" />
<partial name="_UpdateSignatureModal" />