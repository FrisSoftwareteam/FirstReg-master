                    </td>
                    <td class="text-end"><span class="fs-4">@item.Units.ToString("N0")</span></td>
                    <td class="text-end">
                        <a asp-controller="Shareholder" asp-action="AccountDetails" asp-route-no="@item.AccountNo"
                            class="btn btn-sm btn-light btn-active-light-primary"> Details </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="dv_holding_diag" class="full-modal">
    <div class="full-modal-close" data-dismiss="full-modal"></div>
    <div class="container">
        <div class="scroll h-100 px-5">

            <form id="frm_holders" class="form form-loader" asp-action="AddHoldings" method="post">
                <div class="card-body">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="row justify-content-center py-5">
                        <div class="col-lg-9 col-md-10">
                            <div class="d-block mb-15">
                                <h1 class="display-5 mb-5">Add known certificates</h1>
                                <p class="fs-4">
                                    If you have shareholdings that know of but are not showing on your profile,
                                    you can add them below and our systems will validate and update them for you.
                                </p>
                            </div>

                            <h3 class="pb-5 mt-0 mb-9 border-bottom">Certificates</h3>
                            <partial name="_HoldingsForm" model="regs" />

                            <div class="separator my-10"></div>

                            <div class="mt-10">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary me-2 bt-submit">
                                            <span class="indicator-label">Submit</span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                        <a href="javascript:;" data-dismiss="full-modal" class="btn btn-secondary">Cancel</a>
                                    </div>
                                    <div class="col-lg-6 text-lg-end">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>