@model IEnumerable<AnnualReport>

@{
    ViewBag.Title = "Annual Reports";
}

<section class="hero-section bg-light pt-60">
    <div class="container">
        <div class="row align-items-center justify-content-lg-between">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="hero-content-wrap text-center text-xl-start text-lg-start aos-init aos-animate" data-aos="fade-right">
                    <h1 class="fw-bold display-5">@ViewBag.Title</h1>
                    <p class="lead">
                        These annual reports are downloadable, use the search box to get
                        your desired report and use the download button next to it to get
                        the report on your device.
                    </p>
                    <div class="hero-subscribe-form-wrap pt-4 position-relative m-auto m-xl-0 d-none d-md-block d-lg-block d-xl-block">
                        <form id="subscribe-form" name="email-form" class="hero-subscribe-form d-block d-lg-flex d-md-flex">
                            <input type="search" class="form-control me-2" id="tb_search" data-name="Search" placeholder="Search reports"/>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<section class="related-job-list ptb-60 bg-light">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-12">
                <table id="tb-report" class="table data-list">
                    <thead class="d-none">
                        <tr>
                            <th scope="col">Description</th>
                            <th scope="col" style="width: 150px;"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var post in Model)
                        {

                            <tr>
                                <td>@post.Description.ToUpper()</td>
                                <td class="text-end">
                                    <a asp-controller="Home" asp-action="DownloadReports" asp-route-filename="@post.FileName" 
                                        class="btn btn-info rounded-pill btn-sm">Download</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section styles{ 
    <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            var tbl = $('#tb-report').DataTable({
                paging: false,
                info: false,
                dom: 'lrt'
            });

            var r = document.getElementById("tb_search");
            r && r.addEventListener("keyup", (function (tx) {
                tbl.search(tx.target.value).draw();
            }))
        });
    </script>
}