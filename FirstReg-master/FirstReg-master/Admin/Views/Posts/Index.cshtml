@model IEnumerable<Post>

@{
    ViewData["Title"] = "Posts";
}

<div class="container">

    <div class="d-flex flex-wrap flex-stack">
        <div class="d-flex flex-column flex-wrap align-items-start my-1">
            <div class="d-flex my-0">
                <div class="d-flex align-items-center position-relative my-0 me-5">
                    <span class="svg-icon svg-icon-3 position-absolute ms-3">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                            </g>
                        </svg>
                    </span>
                    <input type="search" id="tb_search" class="form-control form-control-white w-250px ps-9" placeholder="Search" />
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap my-1">
            <a asp-action="Update" asp-route-type="@ViewContext.RouteData.Values["type"]" class="btn btn-info ms-3"><span class="me-2">+</span> Add New</a>
        </div>
    </div>

    <div class="mb-5">
        <table id="tb_client" class="table-row-bordered table-row-dashed gy-4 align-middle fw-bolder data-list">
            <thead class="fs-7 text-gray-400 text-uppercase d-none">
                <tr class="fw-bold fs-6 text-gray-800">
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="symbol symbol-45px me-5">
                                <img src="@Tools.GetBlobFilePath(blobfolder.posts, post.Thumb)" alt="">
                            </div>
                            <div class="d-flex justify-content-start flex-column">
                                <a asp-action="Details" asp-route-code="@post.Code" class="text-dark fw-bolder text-hover-primary fs-6">@post.Title</a>
                                <span class="text-muted fw-bold text-muted d-block fs-7 mt-1">@post.Brief</span>
                            </div>
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                            <span class="fw-bolder">Menu</span>
                            <span class="svg-icon svg-icon-5 m-0">
                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                        <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                        <path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999)"></path>
                                    </g>
                                </svg>
                            </span>
                        </a>
                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-150px py-4" data-kt-menu="true" style="">
                            <div class="menu-item px-3">
                                <a asp-action="Details" asp-route-code="@post.Code" class="menu-link px-3">View Details</a>
                            </div>
                            <div class="menu-item px-3">
                                <a asp-action="Update" asp-route-type="@post.Type" asp-route-code="@post.Code" class="menu-link px-3">Update Details</a>
                            </div>
                            <div class="separator my-3"></div>
                            <div class="menu-item px-3">
                                <a asp-action="Delete" asp-route-code="@post.Code" class="menu-link px-3">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>