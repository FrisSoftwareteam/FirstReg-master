@model DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="post d-flex flex-column-fluid" id="kt_post">
    <div id="kt_content_container" class="container">
        <div class="row g-6 g-xl-9">
            <div class="col-md-4">
                <div class="card card-md-stretch mb-xl-8">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex flex-column flex-grow-1">
                            <span class="text-dark text-hover-primary fw-bolder fs-3">This Month</span>
                            <div>
                                <span style="background-image:url('/admin/assets/media/illustrations/sigma-1/1.png')" class="d-block h-150px w-100 bgi-no-repeat bgi-size-contain bgi-position-center"></span>
                            </div>
                        </div>
                        <div class="pt-5">
                            <span class="text-dark fw-bolder fs-2x lh-0">₦</span>
                            <span class="text-dark fw-bolder fs-3x me-2 lh-0">@Model.ThisMonth</span>
                            <span class="text-success fw-bolder fs-6 lh-0">+ @Model.Percentage%</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card card-xl-stretch mb-xl-8">
                    <div class="card-body p-0 d-flex justify-content-between flex-column overflow-hidden">
                        <div class="d-flex flex-stack flex-wrap flex-grow-1 px-9 pt-9 pb-3">
                            <div class="me-2">
                                <span class="fw-bolder text-gray-800 d-block fs-3">Sales</span>
                                <span class="text-gray-400 fw-bold">In the past year</span>
                            </div>
                            <div class="fw-bolder fs-3 text-info">₦@Model.TotalSales</div>
                        </div>
                        <div class="mixed-widget-10-chart" data-kt-color="info" style="height: 200px"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card card-flush h-lg-100">
                    <div class="card-header mt-6">
                        <div class="card-title flex-column">
                            <h3 class="fw-bolder mb-1">User Summary</h3>
                            <div class="fs-6 fw-bold text-gray-400">@Model.TotalUsers Users in total</div>
                        </div>
                        <div class="card-toolbar">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-light btn-sm">View Users</a>
                        </div>
                    </div>
                    <div class="card-body p-9 pt-5">
                        <div class="d-flex flex-wrap">
                            <div class="position-relative d-flex flex-center h-175px w-175px me-15 mb-7">
                                <div class="position-absolute translate-middle start-50 top-50 d-flex flex-column flex-center">
                                    <span class="fs-2qx fw-bolder">@Model.TotalUsers</span>
                                    <span class="fs-6 fw-bold text-gray-400">Total Users</span>
                                </div>
                                <canvas id="project_overview_chart"></canvas>
                            </div>
                            <div class="d-flex flex-column justify-content-center flex-row-fluid pe-1 mb-5">
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-primary me-3"></div>
                                    <div class="text-gray-400">Shareholders</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.Shareholders</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-success me-3"></div>
                                    <div class="text-gray-400">Stock Brokers</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.StockBrokers</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-danger me-3"></div>
                                    <div class="text-gray-400">Company Secs</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.CompanySecs</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center">
                                    <div class="bullet bg-gray-300 me-3"></div>
                                    <div class="text-gray-400">FR Admins</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.FRAdmins</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card card-flush h-lg-100">
                    <div class="card-header mt-6">
                        <div class="card-title flex-column">
                            <h3 class="fw-bolder mb-1">User Summary</h3>
                            <div class="fs-6 fw-bold text-gray-400">@Model.TotalSubscribers in total</div>
                        </div>
                        <div class="card-toolbar">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-light btn-sm">View Users</a>
                        </div>
                    </div>
                    <div class="card-body p-9 pt-5">
                        <div class="d-flex flex-wrap">
                            <div class="position-relative d-flex flex-center h-175px w-175px me-15 mb-7">
                                <div class="position-absolute translate-middle start-50 top-50 d-flex flex-column flex-center">
                                    <span class="fs-2qx fw-bolder">@Model.TotalSubscribers</span>
                                    <span class="fs-6 fw-bold text-gray-400">Total Users</span>
                                </div>
                                <canvas id="project_overview_chart"></canvas>
                            </div>
                            <div class="d-flex flex-column justify-content-center flex-row-fluid pe-1 mb-5">
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-primary me-3"></div>
                                    <div class="text-gray-400">Active</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.Active</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-success me-3"></div>
                                    <div class="text-gray-400">Inactive</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.Inactive</div>
                                </div>
                                <div class="d-flex fs-6 fw-bold align-items-center mb-3">
                                    <div class="bullet bg-danger me-3"></div>
                                    <div class="text-gray-400">Never</div>
                                    <div class="ms-auto fw-bolder text-gray-700">@Model.Never</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card card-flush h-lg-100">
                    <div class="card-header mt-6">
                        <div class="card-title flex-column">
                            <h3 class="fw-bolder mb-1">New Users</h3>
                            <div class="fs-6 text-gray-400">From total @Model.TotalUsers users</div>
                        </div>
                        <div class="card-toolbar">
                            <a asp-controller="Users" asp-action="Index" class="btn btn-bg-light btn-active-color-primary btn-sm">View All</a>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column p-9 pt-3 mb-9">

                        @foreach (var user in Model.Users)
                        {
                            <div class="d-flex align-items-center mb-5">
                                <div class="me-5 position-relative">
                                    <div class="symbol symbol-35px symbol-circle">
                                        <span class="symbol-label bg-light-danger text-danger fw-bold">@user.Initial</span>
                                    </div>
                                    <div class="bg-success position-absolute h-8px w-8px rounded-circle translate-middle start-100 top-100 ms-n1 mt-n1"></div>
                                </div>
                                <div class="fw-bold">
                                    <a asp-controller="Shareholders" asp-action="Details" asp-route-code="" class="fs-5 fw-bolder text-gray-900 text-hover-primary">@user.Name</a>
                                    <div class="text-gray-400">@user.Email</div>
                                </div>
                                <div class="badge badge-light ms-auto">--</div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card card-flush h-lg-100">
                    <div class="card-header mt-6">
                        <div class="card-title flex-column">
                            <h3 class="fw-bolder mb-1">Recent Cert Requestes</h3>
                            <div class="fs-6 text-gray-400">Total 382 requests</div>
                        </div>
                        <div class="card-toolbar">
                            <a href="#" class="btn btn-bg-light btn-active-color-primary btn-sm">View All</a>
                        </div>
                    </div>
                    <div class="card-body p-9 pt-3">
                        <div class="d-flex flex-column mb-9">

                            @foreach (var file in Model.CertRequests)
                            {
                                <div class="d-flex align-items-center mb-5">
                                    <div class="symbol symbol-30px me-5">
                                        <img alt="Icon" src="assets/media/svg/files/xml.svg" />
                                    </div>
                                    <div class="fw-bold">
                                        <a class="fs-6 fw-bolder text-dark text-hover-primary" href="#">@file.Description</a>
                                        <div class="text-gray-400">
                                            @file.Time
                                            <a href="#">@file.Name</a>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-clean btn-sm btn-icon btn-icon-primary btn-active-light-primary ms-auto">
                                        <span class="svg-icon svg-icon-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                    <rect x="5" y="5" width="5" height="5" rx="1" fill="#000000" />
                                                    <rect x="14" y="5" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                                    <rect x="5" y="14" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                                    <rect x="14" y="14" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                                </g>
                                            </svg>
                                        </span>
                                    </button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>