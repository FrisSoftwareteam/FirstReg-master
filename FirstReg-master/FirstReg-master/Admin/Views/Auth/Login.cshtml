@model LoginModel

<div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(assets/media/illustrations/progress-hd.png)">
    <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
        <a href="~/" class="mb-12"> <img alt="Logo" src="~/img/logos/logo.png" class="h-90px" /> </a>
        <div class="w-lg-500px bg-white rounded shadow-sm p-10 p-lg-15 mx-auto">
            <form id="form_login" class="form w-100 form-loader" method="post">
                <div class="text-center mb-10">
                    <h1 class="text-dark mb-3">Sign In to FR Admin</h1>
                </div>
                <div class="fv-row mb-10">
                    <label class="form-label fs-6 fw-bolder text-dark">Email</label>
                    <input class="form-control form-control-lg form-control-solid" type="text" asp-for="Username" autocomplete="off" required />
                </div>
                <div class="fv-row mb-10">
                    <div class="d-flex flex-stack mb-2">
                        <label class="form-label fw-bolder text-dark fs-6 mb-0">Password</label>
                        <a asp-action="Forgot" class="link-primary fs-6 fw-bolder" tabindex="-1">Forgot Password ?</a>
                    </div>
                    <input class="form-control form-control-lg form-control-solid" type="password" asp-for="Password" autocomplete="off" required />
                </div>
                <div class="text-center">
                    <button type="submit" id="bt_login" class="btn btn-lg btn-primary w-100 mb-5 bt-submit">
                        <span class="indicator-label">Continue</span>
                        <span class="indicator-progress">Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>