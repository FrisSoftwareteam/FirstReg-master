@model string[]

@{
    ViewData["Title"] = "Shareholders";
}

<div class="container">
    <div class="d-flex flex-wrap flex-stack">
        <div class="d-flex flex-column flex-wrap align-items-start my-1">
            <div class="d-flex my-0">
                <div class="d-flex align-items-center position-relative my-0 me-5">
                    <span class="svg-icon svg-icon-3 position-absolute ms-3">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                            </g>
                        </svg>
                    </span>
                    <input type="search" id="tb_search" class="form-control form-control-white w-250px ps-9" placeholder="Search" />
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap my-1">
            <a href="javascript:;" class="btn btn-info btn-sm ms-3" data-mode="full-modal" data-target="diag_user"><span class="me-2">+</span> Add New</a>
            @*<a href="javascript:;" class="btn btn-info btn-sm ms-3" data-mode="full-modal" data-target="diag_user"><span class="me-2">+</span> Add New</a>*@
        </div>
    </div>

    <div class="mb-5">
        <table id="tb_data" class="table-row-bordered table-row-dashed gy-4 align-middle fw-bolder data-list" data-url="@Model.First()">
            <thead class="fs-5 text-gray-400 text-uppercase">
                <tr class="fw-bold fs-7 text-gray-700">
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th>Subscription</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div id="diag_user" class="full-modal">
    <div class="full-modal-close" data-dismiss="full-modal"></div>
    <div class="container">
        <div class="scroll h-100 px-5">

            <form asp-action="Create" id="diag_user_form" class="form form-loader" method="post">
                <div class="card-body">
                    <input type="hidden" name="id" value="0" />
                    <div class="row justify-content-center py-5">
                        <div class="col-lg-9 col-md-10">
                            <div class="d-block mb-15">
                                <h1 class="display-5 mb-5">Add New Shareholder</h1>
                            </div>

                            <h3 class="pb-5 mt-7 mb-9 border-bottom">Basic Information</h3>

                            <div class="row">
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Last name</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.LastName)" placeholder="Bull" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Other names</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.FirstName)" placeholder="John" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Clearing No</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.ClearingNo)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Email address</label>
                                        <input type="email" class="form-control form-control-solid" name="@nameof(ShareHolderModel.Email)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Primary Phone</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.MobileNo)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Secondary Phone</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.SecondaryPhone)" placeholder="" />
                                    </div>
                                </div>
                            </div>

                            <h3 class="pb-5 mt-7 mb-9 border-bottom">Contact Information</h3>

                            <div class="row">
                                <div class="col-12">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Street</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.Street)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">City</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.City)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">State</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.State)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Post code</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.PostCode)" placeholder="" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Country</label>
                                        <input type="text" class="form-control form-control-solid" name="@nameof(ShareHolderModel.Country)" placeholder="" required />
                                    </div>
                                </div>
                            </div>

                            <div class="separator my-10"></div>

                            <div class="mt-10">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-primary me-2 bt-submit">
                                            <span class="indicator-label">Submit</span>
                                            <span class="indicator-progress">
                                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                        <a href="javascript:;" data-dismiss="full-modal" class="btn btn-secondary">Cancel</a>
                                    </div>
                                    <div class="col-lg-6 text-lg-end">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/pages/shareholders.js" asp-append-version="true"></script>
}

