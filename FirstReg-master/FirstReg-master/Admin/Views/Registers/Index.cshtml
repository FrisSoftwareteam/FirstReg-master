@model IEnumerable<Register>

@{
    ViewData["Title"] = "Registers";
}

<div class="container">

    <div class="d-flex flex-wrap flex-stack">
        <div class="d-flex flex-column flex-wrap align-items-start my-1">
            <div class="d-flex my-0">
                <div class="d-flex align-items-center position-relative my-0 me-5">
                    <span class="svg-icon svg-icon-3 position-absolute ms-3">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                            </g>
                        </svg>
                    </span>
                    <input type="search" id="tb_search" class="form-control form-control-white w-250px ps-9" placeholder="Search" />
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap my-1">
        </div>
    </div>

    <div class="mb-5">
        <table id="tb_client" class="table-row-bordered table-row-dashed gy-4 align-middle fw-bolder data-list">
            <thead class="fs-7 text-gray-400 text-uppercase d-none">
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="fs-6">
                @foreach (var item in Model.OrderBy(x => x.Name))
                {
                    <tr id="tr_@item.Id">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="d-flex justify-content-start flex-column">
                                    <span class="text-dark fw-bolder text-hover-primary fs-6">@item.Name</span>
                                    <span class="text-muted fw-bold text-muted d-block fs-7">@item.Email</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                <span class="fw-bolder">Menu</span>
                                <span class="svg-icon svg-icon-5 m-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                            <path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999)"></path>
                                        </g>
                                    </svg>
                                </span>
                            </a>
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-150px py-4" data-kt-menu="true" style="">

                                @if (item.User == null)
                                {
                                    <div class="menu-item px-3">
                                        <a class="menu-link px-3 a_create_acc" data-id="@item.Id" data-name="@item.Name" data-email="@item.Email"
                                           data-phone="@item.Phone" data-bs-toggle="modal" data-bs-target="#diag_user">Create Account</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="menu-item px-3">
                                        <a class="menu-link px-3 a_reset" data-id="@item.Id" data-name="@item.Name" data-email="@item.Email">Reset Password</a>
                                    </div>
                                }
                                <div class="separator my-3"></div>
                                <div class="menu-item px-3">
                                    <a class="menu-link px-3 a_view_details" data-name="@item.Name" data-email="@item.Email"
                                       data-phone="@item.Phone" data-address="@item.Address" data-rc="@item.RCNo"
                                       data-bs-toggle="modal" data-bs-target="#diag_details">View Details</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<div class="modal fade" id="diag_user" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <form class="form form-loader" asp-action="CreateAccount" id="diag_user_form">
                <div class="modal-header" id="diag_user_header">
                    <h2 class="fw-bolder">Create Company Account</h2>
                    <div id="diag_user_close" class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                        <span class="svg-icon svg-icon-1"> <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1"> <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000"> <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" /> <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" /> </g> </svg> </span>
                    </div>
                </div>
                <div class="modal-body py-10 px-lg-17">
                    <div class="d-flex flex-column">
                        <div>
                            <input type="hidden" name="id" id="hd_id" />
                            <div class="fv-row mb-5">
                                <label class="fs-6 fw-bold mb-2">Name</label>
                                <input id="tx_name" type="text" class="form-control form-control-solid" name="Name" placeholder="First Registrars Nigeria" required />
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Email address</label>
                                        <input id="tx_email" type="text" class="form-control form-control-solid" name="Email" placeholder="user@email.com" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="fv-row mb-5">
                                        <label class="fs-6 fw-bold mb-2">Phone number</label>
                                        <input id="tx_phone" type="text" class="form-control form-control-solid" name="Phone" placeholder="ex: 08012345678" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer flex-center">
                    <button class="btn btn-white me-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary bt-submit"> <span class="indicator-label">Submit</span> <span class="indicator-progress"> Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span> </span> </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="diag_details" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header border-0 py-4 pb-0" id="diag_user_header">
                <h6 class="fw-bolder"></h6>
                <div id="diag_user_close" class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1"> <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1"> <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000"> <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" /> <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" /> </g> </svg> </span>
                </div>
            </div>
            <div class="modal-body py-10 px-lg-17 pt-0">

                <div id="div_name" class="fs-2hx fw-bolder">First Registrars Nigeria</div>
                <div class="fs-4 fw-bold text-gray-400 mb-7">RC: <span id="sp_rc">000000</span></div>

                <div class="d-print-none border border-dashed border-gray-300 card-rounded h-lg-100 min-w-md-350px p-9 bg-lighten">
                    <h6 class="mb-8 fw-boldest text-gray-600 text-hover-primary">CONTACT DETAILS</h6>
                    <div class="mb-6">
                        <div class="fw-bold text-gray-600 fs-7">Email:</div>
                        <div id="div_email" class="fw-bolder text-gray-800 fs-6">[user@email.com]</div>
                    </div>
                    <div class="mb-6">
                        <div class="fw-bold text-gray-600 fs-7">Phone:</div>
                        <div id="div_phone" class="fw-bolder text-gray-800 fs-6">[080]</div>
                    </div>
                    <div class="mb-6">
                        <div class="fw-bold text-gray-600 fs-7">Address:</div>
                        <div id="div_address" class="fw-bolder text-gray-800 fs-6">[somewhere in ...]</div>
                    </div>
                </div>

            </div>
            <div class="modal-footer flex-center border-0 pt-0">
                <button class="btn btn-white me-3" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/pages/register.js" asp-append-version="true"></script>
}