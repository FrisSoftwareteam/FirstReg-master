@model ShareOfferModel
@inject Service _service

@{
    ViewData["Title"] = Model.Id > 0 ? "Update Share Offer" : "Create Share Offer";
    var registers = new SelectList((await _service.Data.Get<Register>()).OrderBy(x => x.Description), "Id", "Name");
}

<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card card-custom gutter-b example example-compact">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">
                        @ViewBag.Title
                    </h3>
                </div>
            </div>
            <form id="frm" class="form" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UniqueKey" />
                <div class="card-body">
                    <div class="my-5 mx-8">
                        <h3 class="text-dark font-weight-bold mb-10">Post Details:</h3>
                        <div class="form-group row mb-6">
                            <div class="col-lg-6">
                                <label>Register:</label>
                                <select asp-for="RegisterId" class="form-control form-control-solid" asp-items="@registers" required>
                                    <option>Select Register</option>
                                </select>
                            </div>
                            <div class="col-lg-6">
                                <label>Description:</label>
                                <input type="text" asp-for="Description" class="form-control form-control-solid" placeholder="Enter description" required />
                            </div>
                        </div>
                        <div class="form-group row mb-6">
                            <div class="col-lg-6">
                                <label>Start:</label>
                                <input type="date" asp-for="StartDate" class="form-control form-control-solid" placeholder="Enter start date" required />
                            </div>
                            <div class="col-lg-6">
                                <label>End:</label>
                                <input type="date" asp-for="EndDate" class="form-control form-control-solid" placeholder="Enter end date" required />
                            </div>
                        </div>

                        <div class="separator separator-dashed my-10"></div>

                        <h3 class="text-dark font-weight-bold mb-10">Choose Offers:</h3>
                        <div class="form-group row mb-8">
                            <div class="col-lg-12">
                                <div class="d-flex flex-stack">
                                    <div class="fw-semibold me-5">
                                        <label class="fs-6">Offers</label>
                                        <div class="fs-7 text-muted">Choose if public offer and/or rights issue is allowed</div>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <label class="form-check form-check-custom form-check-solid me-10">
                                            <input class="form-check-input h-20px w-20px" type="checkbox" asp-for="AllowPublicOffer" />
                                            <span class="form-check-label fw-semibold">
                                                Public Offer
                                            </span>
                                        </label>
                                        <label class="form-check form-check-custom form-check-solid">
                                            <input class="form-check-input h-20px w-20px" type="checkbox" asp-for="AllowRightIssue" />
                                            <span class="form-check-label fw-semibold">
                                                Right Issue
                                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="div_public_offer" class="@(Model.AllowPublicOffer ? "d-block" : "d-none")">

                            <div class="separator separator-dashed my-10"></div>

                            <h3 class="text-dark font-weight-bold mb-10">Public Offer:</h3>
                            <div class="form-group row mb-10">
                                <div class="col-lg-6">
                                    <label>Price:</label>
                                    <input type="number" asp-for="PublicOfferPrice" step=".01" class="form-control form-control-solid" placeholder="Enter public offer price" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>Minimum Units:</label>
                                    <input type="number" asp-for="PublicOfferMinimum" class="form-control form-control-solid" placeholder="Enter units required for public offer" required />
                                </div>
                            </div>
                            <div class="form-group row mb-6">
                                <div class="col-lg-6">
                                    <label>Multiple:</label>
                                    <input type="number" asp-for="PublicOfferFactor" class="form-control form-control-solid" placeholder="Enter public offer factor" required />
                                </div>
                            </div>

                        </div>

                        <div id="div_right_issue" class="@(Model.AllowRightIssue ? "d-block" : "d-none")">

                            <div class="separator separator-dashed my-10"></div>

                            <h3 class="text-dark font-weight-bold mb-10">Right Issue:</h3>
                            <div class="form-group row mb-10">
                                <div class="col-lg-6">
                                    <label>Units required:</label>
                                    <input type="number" asp-for="RightIssueUnits" class="form-control form-control-solid" placeholder="Enter units required for right issue" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>Rights:</label>
                                    <input type="number" asp-for="RightIssueRights" class="form-control form-control-solid" placeholder="Enter right" required />
                                </div>
                            </div>
                            <div class="form-group row mb-6">
                                <div class="col-lg-6">
                                    <label>Price:</label>
                                    <input type="number" asp-for="RightIssuePrice" step=".01" class="form-control form-control-solid" placeholder="Enter right issue price" required />
                                </div>
                                <div class="col-lg-6">
                                    <label>Multiple:</label>
                                    <input type="number" asp-for="RightIssueFactor" class="form-control form-control-solid" placeholder="Enter right issue factor" required />
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="card-footer mt-10">
                        <div class="row">
                            <div class="col-lg-6">
                                <button type="submit" id="save-button" class="btn btn-primary mr-2">Save</button>
                                <button type="reset" class="btn btn-secondary">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/pages/share-offer-update.js" asp-append-version="true"></script>
}