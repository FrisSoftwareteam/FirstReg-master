@model IEnumerable<ShareHolding>

@{
    ViewData["Title"] = "Pending Accounts";
}

<div class="container">
    <div class="col-xl-12">
        <div class="d-block">
            <table id="tb_data" class="table table-row-bordered data-list gy-5 gs-7">
                <thead class="d-none">
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th>Company</th>
                        <th>Names</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="d-flex justify-content-start flex-column">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark fw-bolder text-hover-primary fs-6">@item.Register.Name</a>
                                        <span class="text-muted fw-bold text-muted d-block fs-7">Acc no: @item.AccountNo</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="d-flex justify-content-start flex-column">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark fw-bolder text-hover-primary fs-6">@item.Shareholder.User.FullName</a>
                                        <span class="text-muted fw-bold text-muted d-block fs-7">Acc name: @item.AccountName</span>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end">
                                <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                    <span class="fw-bolder">Actions</span>
                                    <span class="svg-icon svg-icon-5 m-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                                <path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999)"></path>
                                            </g>
                                        </svg>
                                    </span>
                                </a>
                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true" style="">
                                    <div class="menu-item px-3">
                                        <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#diag_acc" data-id="@item.Id" data-reg="@item.Register.Name" data-accno="@item.AccountNo" data-accname="@item.AccountName" class="menu-link bt_approve px-3">Approve</a>
                                    </div>
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-customer-table-filter="delete_row">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="diag_acc" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content rounded">
            <div class="modal-header pb-0 border-0 justify-content-end">
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1"> <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1"> <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000"> <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" /> <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" /> </g> </svg> </span>
                </div>
            </div>
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                <form id="diag_acc_form" class="form" asp-action="Approve">
                    <input id="hd_id" type="hidden" name="Id" />
                    <div class="mb-13 text-center">
                        <h1 class="mb-3">Confirm Account</h1>
                        <div class="text-gray-400 fw-bold fs-5">
                            Confirm the account by adding the units and values for the selected account.
                        </div>
                    </div>
                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2"> <span class="required">Register</span> <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify a target name for future usage and reference"></i> </label>
                        <input id="tx_register" type="text" class="form-control form-control-solid" placeholder="Register" name="Register" readonly />
                    </div>
                    <div class="row g-9 mb-8">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-bold mb-2">Account Name:</label>
                            <input id="tx_name" type="text" class="form-control form-control-solid" placeholder="Account name" name="Name" readonly />
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-bold mb-2">Account No:</label>
                            <input id="tx_acc" type="text" class="form-control form-control-solid" placeholder="Account no" name="No" readonly />
                        </div>
                    </div>
                    <div class="row g-9 mb-12">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-bold mb-2">Unit:</label>
                            <input id="tx_units" type="text" class="form-control form-control-solid" placeholder="Enter no of units" name="Units" required />
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-bold mb-2">Value:</label>
                            <input id="tx_value" type="text" class="form-control form-control-solid" placeholder="Enter account value" name="Value" required />
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="diag_acc_submit" class="btn btn-success"> 
                            <span class="indicator-label">Submit</span> 
                            <span class="indicator-progress"> 
                                Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span> 
                            </span> 
                        </button>
                        <button type="button" id="diag_acc_cancel" class="btn btn-white me-3" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('.bt_approve').click(function () {
            $('#hd_id').val($(this).attr('data-id'));
            $('#tx_register').val($(this).attr('data-reg'));
            $('#tx_name').val($(this).attr('data-accname'));
            $('#tx_acc').val($(this).attr('data-accno'));
        });

        $('#diag_acc_form').submit(function () {
            var button = document.querySelector("#diag_acc_submit");
            button.setAttribute("data-kt-indicator", "on");
        });
    </script>
}